<header class="px-6 relative z-50">
	<div class="flex flex-col md:flex-row md:justify-between py-5">
		<!-- Logo + Hamburger -->
		<div class="flex items-center justify-between w-full md:w-auto">
			<h1 class="uppercase text-lg basis-2 leading-[0.9] tracking-[0.04em]">
				<a href="/">Naveen Kharwar</a>
			</h1>

			<!-- Hamburger -->
			<button
				id="menuToggle"
				class="md:hidden p-2 focus:outline-none cursor-pointer"
				aria-label="Toggle menu"
			>
				<div class="space-y-1">
					<span class="block h-0.5 w-6 bg-black"></span>
					<span class="block h-0.5 w-6 bg-black"></span>
					<span class="block h-0.5 w-6 bg-black"></span>
				</div>
			</button>
		</div>

		<!-- Desktop Menu -->
		<div class="hidden md:flex md:items-center md:gap-4">
			<nav>
				<ul class="flex md:flex-row md:items-center gap-4">
					<li><a class="text-xs uppercase" href="/writings">Writings</a></li>
					<li>
						<a
							class="text-xs uppercase"
							target="_blank"
							rel="noopener noreferrer"
							href="/naveenkharwar-cv.pdf">CV / About</a
						>
					</li>
				</ul>
			</nav>
			<a
				href="/contact"
				class="text-xs uppercase bg-black px-6 py-2 text-white md:ml-4"
			>
				Work with me
			</a>
		</div>

		<!-- Mobile Popup Menu -->
		<div
			id="mobileMenu"
			class="md:hidden hidden fixed inset-0 text-[#3c2f1c] flex flex-col items-center justify-center space-y-6 px-6 overflow-y-scroll"
		>
			<a
				class="text-sm uppercase tracking-wider hover:underline decoration-dotted"
				href="/writings">Writings</a
			>
			<a
				class="text-sm uppercase tracking-wider hover:underline decoration-dotted"
				target="_blank"
				rel="noopener noreferrer"
				href="/naveenkharwar-cv.pdf">About / CV</a
			>
			<a
				href="/contact"
				class="text-xs uppercase bg-black px-6 py-2 text-white"
			>
				Work with me
			</a>
			<button
				id="menuClose"
				class="text-xs uppercase text-[#5e4630] underline mt-8 tracking-wide cursor-pointer"
			>
				Close
			</button>
		</div>
	</div>
</header>

<!-- Add this script at the bottom to handle menu toggle -->
<script>
	document.addEventListener("DOMContentLoaded", () => {
		const toggleBtn = document.getElementById("menuToggle");
		const closeBtn = document.getElementById("menuClose");
		const menu = document.getElementById("mobileMenu");

		toggleBtn?.addEventListener("click", () => {
			menu?.classList.toggle("hidden");
		});

		closeBtn?.addEventListener("click", () => {
			menu?.classList.add("hidden");
		});
	});
</script>
